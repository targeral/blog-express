<%- include header %>
<div class="container">
	<div class="row">
		<div class="col-sm-12">
			<form method="post" class="pos-rel">
	<div class="form-group">
		<label for="blog_title">标题</label>
		<input type="text" name="title" class="form-control" id="blog_title" placeholder="标题" />
	</div>
	<div class="form-group">
		<label for="blog_label">标签</label>
		<select name="op" id="">
			<option value="op1">HTML/CSS</option>
			<option value="op2">CSS3/HTML5</option>
			<option value="op3">javascript</option>
			<option value="op4">design</option>
			<option value="op5">nodejs</option>
			<option value="op6">项目</option>
			<option value="op7">随笔</option>
		</select>
	</div>
	<div class="form-group">
		<label for="blog_content">正文</label>
		<textarea name="content" rows="20" cols="100" class="form-control" placeholder="第一段请用p标签"></textarea><br />
	</div>
	<div class="form-group">
		<div class="img-file">
			<input type="file" id="Imginput" placeholder="imgfile" name="imgfile">
			<!--<span class="glyphicon glyphicon-picture" aria-hidden="true"></span>-->
		</div>
	</div>
  	<input type="submit" value="发表" class="btn btn-default" />
  	<a href="/dashboard" class="btn btn-default">返回</a>
</form>
		</div>
	</div>
</div>
<%- include footer %>